// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace && !(Editor && vim_mode == insert) && !Terminal",
    "bindings": {
      "space space": "file_finder::Toggle"
    }
  },
  {
    "context": "Workspace && !(Editor && vim_mode == insert) && !Terminal",
    "bindings": {
      "space b": "tab_switcher::ToggleAll"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "cmd-shift-a": "tab_switcher::ToggleAll"
    }
  },
  {
    "context": "Pane && !(Editor && vim_mode == insert) && !Terminal",
    "bindings": {
      "space /": "pane::DeploySearch"
    }
  },
  {
    "context": "Workspace && !Editor && !Terminal",
    "bindings": {
      "space /": "pane::DeploySearch"
    }
  },
  // {
  // TODO: Where does it even trigger?
  //   "context": "ProjectSearchBar",
  //   "bindings": {
  //     "space /": "search::FocusSearch"
  //   }
  // },
  {
    "context": "Workspace && !(Editor && vim_mode == insert) && !Terminal",
    "bindings": {
      "space t": "workspace::NewCenterTerminal"
    }
  }
]
